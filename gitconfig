[core]
  excludesfile = /Users/dist/.gitignore

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[branch]
  autosetuprebase = always

[branch "master"]
  mergeoptions = --no-ff

[init]
  templatedir = ~/.git_template

[push]
  default = tracking

[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true

[merge]
	tool = vimdiff
[rebase]
	autosquash = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[alias]
	please = push --force-with-lease
	commend = commit --amend --no-edit
	merc = merge --no-ff --no-edit

