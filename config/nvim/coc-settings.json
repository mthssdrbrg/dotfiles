{
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },
  "codeLens.enable": true,
  "solargraph.commandPath": "/home/dist/.local/share/asdf/shims/solargraph"
}
