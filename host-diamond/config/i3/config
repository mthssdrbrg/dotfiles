# i3 config file (v4)
# vim:filetype=i3
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# set modifier
set $mod Mod4

# all the borders
for_window [class="^.*"] border pixel 2

# window colorsss
# class                 border  backgr. text    indicator
client.focused          #bd93f9 #bd93f9 #bd93f9 #bd93f9
client.unfocused        #44475a #44475a #44475a #44475a
client.focused_inactive #323232 #333333 #ebdbb2 #323232
client.urgent           #383a3b #383a3b #ee0000 #383a3b

# font for window titles
# will also be used by the bar unless a different font is used in the bar {} block below
font pango:xos4 Terminus, Awesome 0

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# open new widows at the bottom by default
default_orientation vertical

workspace_layout tabbed

# start a terminal
bindsym $mod+Return exec --no-startup-id i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start rofi
bindsym $mod+space exec --no-startup-id rofi -show combi

# alt-tab switcher
bindsym Mod1+Tab exec --no-startup-id rofi -show window
bindsym $mod+Tab exec --no-startup-id rofi -show window

# quickly move to (latest) urgent workspace
bindsym $mod+u [urgent=latest] focus

# htop (activity manager)
bindsym $mod+Shift+a exec --no-startup-id i3-sensible-terminal -t htop -e htop

# move to last used workspace
bindsym $mod+Escape workspace back_and_forth

# password manager
bindsym $mod+Ctrl+l exec --no-startup-id ~/.local/bin/passmenu

# open project
bindsym $mod+c exec --no-startup-id rofi -show c:~/.local/bin/rofi-c

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# split in horizontal orientation
bindsym $mod+Ctrl+h split h

# split in vertical orientation
bindsym $mod+Ctrl+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

set $ws1 1: 
set $ws2 2: 
set $ws3 3: 
set $ws4 4: 
set $ws5 5: 
set $ws6 6: 
set $ws7 7: 
set $ws8 8: 

assign [class="Chromium"] $ws1
assign [class="Google-chrome"] $ws1
assign [class="Firefox"] $ws1
assign [class="Franz"] $ws4
assign [class="^URxvt$" instance="^c$"] $ws3
assign [title="^ncmpcpp$"] $ws2
assign [class="Enpass"] $ws5
for_window [class="feh"] floating enable
for_window [class="Spotify"] move to workspace $ws2
for_window [class="Lxappearance"] floating enable
for_window [title="Event Tester"] floating enable
for_window [title="^htop$"] floating enable
for_window [title="Tree Style Tab Configuration"] floating enable
for_window [class="Gitg"] floating enable

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+Left workspace prev_on_output
bindsym $mod+Right workspace next_on_output

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Move windows in and out of the scratchpad with mod+(shift)+t
bindsym $mod+Shift+t move scratchpad
bindsym $mod+Ctrl+t scratchpad show

# window/workspace manipulation
mode "window" {
  bindsym s split v; mode "default"
  bindsym v split h; mode "default"
  bindsym f fullscreen toggle; mode "default"
  bindsym a focus parent

  bindsym h workspace prev_on_output
  bindsym l workspace next_on_output

  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+w mode "window"

# resize (window) mode
mode "resize" {
  bindsym h resize shrink width 2 px or 2 ppt
  bindsym j resize shrink height 2 px or 2 ppt
  bindsym k resize grow height 2 px or 2 ppt
  bindsym l resize grow width 2 px or 2 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 2 px or 2 ppt
  bindsym Down resize grow height 2 px or 2 ppt
  bindsym Up resize shrink height 2 px or 2 ppt
  bindsym Right resize grow width 2 px or 2 ppt

  bindsym Escape mode "default"
  bindsym Return mode "default"
}

bindsym $mod+r mode "resize"

# move mode
mode "move" {
  # move focused container to workspace
  bindsym 1 move container to workspace $ws1; mode "default"
  bindsym 2 move container to workspace $ws2; mode "default"
  bindsym 3 move container to workspace $ws3; mode "default"
  bindsym 4 move container to workspace $ws4; mode "default"
  bindsym 5 move container to workspace $ws5; mode "default"
  bindsym 6 move container to workspace $ws6; mode "default"
  bindsym 7 move container to workspace $ws7; mode "default"
  bindsym 8 move container to workspace $ws8; mode "default"

  bindsym h move left; mode "default"
  bindsym j move down; mode "default"
  bindsym k move up; mode "default"
  bindsym l move right; mode "default"

  bindsym Shift+greater move workspace to output right; mode "default"
  bindsym Shift+less move workspace to output left; mode "default"

  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+m mode "move"

# applications mode
mode "applications" {
  bindsym c exec --no-startup-id $BROWSER; mode "default"
  bindsym s exec --no-startup-id ~/.local/bin/dspotify; mode "default"
  bindsym z exec --no-startup-id franz-bin; mode "default"
  bindsym n exec --no-startup-id i3-sensible-terminal -t ncmpcpp -e ncmpcpp; mode "default"
  bindsym e exec --no-startup-id enpass; mode "default"

  bindsym Escape mode "default"
  bindsym Return mode "default"
}

bindsym $mod+a mode "applications"

bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 5%-
bindsym XF86AudioMute exec --no-startup-id amixer -q set Master toggle
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioStop exec --no-startup-id playerctl stop
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 2.5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 2.5

# Power control mode
set $power_control "[l]ock log[o]ut [s]uspend [h]ibernate [r]eboot [p]oweroff"
mode $power_control {
  bindsym l exec --no-startup-id xautolock -locknow; mode "default"
  bindsym o exec --no-startup-id i3-msg exit; mode "default"
  bindsym s exec --no-startup-id systemctl suspend; mode "default"
  bindsym h exec --no-startup-id systemctl hibernate; mode "default"
  bindsym r exec --no-startup-id systemctl reboot; mode "default"
  bindsym p exec --no-startup-id systemctl poweroff; mode "default"

  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+p mode $power_control

# autostart applications
exec --no-startup-id feh --bg-fill ~/Dropbox/Wallpapers/forkbomb.png
exec --no-startup-id systemctl --user start dunst
exec --no-startup-id systemctl --user start udiskie
exec --no-startup-id systemctl --user start redshift
exec --no-startup-id systemctl --user start autolock
exec_always --no-startup-id autorandr --change
