#!/usr/bin/env bash

set -e

declare -r data_dir="$XDG_DATA_HOME/i3lock-less-fancy"
declare -r img_path="$data_dir/lock-image.png"
declare -r icon="$data_dir/lock-overlay.png"

mkdir -p "$data_dir"
scrot --multidisp --silent "$img_path"
convert "$img_path" -scale 10% -scale 1000% "$img_path"
convert "$img_path" "$icon" -gravity center -composite -matte "$img_path"
i3lock --no-unlock-indicator --image="$img_path"
